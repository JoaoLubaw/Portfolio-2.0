{
  "version": 2,
  "builds": [
    {
      "src": "",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    },
    { "src": "backend", "use": "@vercel/python" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "backend/main.py" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
